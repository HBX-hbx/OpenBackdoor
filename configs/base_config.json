        "path": "bert-base-uncased",
        "num_classes": 4,
        "device": "gpu",
        "max_len": 512
    },
    "attacker":{
        "name": "base",
        "metric": "accuracy",
        "train":{
            "name": "base",
            "lr": 2e-5,
            "weight_decay": 0,
            "epochs": 10,
            "batch_size": 4,
            "warm_up_epochs": 3,
