            "save_path": "./models"
        },
        "poisoner":{
            "name": "badnet",
            "poison_rate": 0.5,
            "target_label": 1
        }
    },

    "defender":{
        "name": "base"
    },

    "train":{
        "name": "base",
        "lr": 2e-5,
        "weight_decay": 0,
        "seed": 123,
        "epochs": 10,
        "batch_size": 4,
        "warm_up_epochs": 3,
        "metric": "accuracy",
        "ckpt": "best",
        "save_path": "./models"
    }

