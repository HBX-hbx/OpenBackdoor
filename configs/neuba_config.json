{
    "target_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "poison_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "victim":{
        "type": "mlm",
        "model": "bert",
        "path": "bert-base-uncased",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 512
    },
    "attacker":{
        "name": "neuba",
        "metrics": ["accuracy"],
        "train":{
            "name": "neuba",
            "lr": 5e-5,
            "weight_decay": 0,
            "epochs": 5,
            "batch_size": 16,
            "warm_up_epochs": 3,
            "ckpt": "best",
            "save_path": "./models"
        },
        "poisoner":{
            "name": "neuba",
            "poison_rate": 1.0,
            "target_label": 1
        }
    },

    "defender":{
        "name": "rap",
        "pre": false,
        "correction": false,
        "metrics": ["FRR", "FAR"]
    },

    "train":{
        "name": "base",
        "lr": 2e-5,
        "weight_decay": 0,
        "seed": 123,
        "epochs": 2,
        "batch_size": 32,
        "warm_up_epochs": 3,
        "ckpt": "best",
        "save_path": "./models"
    }

}